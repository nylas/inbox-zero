{
  "name": "inbox-zero",
  "version": "1.0.0",
  "description": "Automate Your Way to Inbox Zero With Nylas",
  "main": "index.js",
  "scripts": {
    "//1": "Run `npm run local` for local development",
    "local": "nodemon --watch ./api --watch server.js server.js",
    "//2": "Glitch will run `npm run start`",
    "start": "node server.js",
    "//3": "For production run `npm run build` followed by `npm run prod`",
    "build": "next build",
    "prod": "NODE_ENV=production node server.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nylas/inbox-zero.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nylas/inbox-zero/issues"
  },
  "homepage": "https://github.com/nylas/inbox-zero#readme",
  "dependencies": {
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "formidable": "^1.2.2",
    "isomorphic-unfetch": "^3.0.0",
    "next": "^9.3.4",
    "next-images": "^1.3.1",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "nylas": "^4.10.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-quill": "^1.3.5"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "nodemon": "^2.0.3",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1"
  }
}
